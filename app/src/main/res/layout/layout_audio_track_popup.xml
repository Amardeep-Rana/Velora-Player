<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audioTrackContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playlist_gradient"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/audioTrackHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCloseAudioTrack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvAudioTrackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="Audio Track"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCloseAudioTrack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audioTrackHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Container for items with padding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAudioTracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_track_selection" />

                <CheckBox
                    android:id="@+id/cbSoftwareDecoder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:buttonTint="@color/primary"
                    android:fontFamily="sans-serif"
                    android:paddingStart="12dp"
                    android:text="Use SW audio decoder"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:checkedIcon="@drawable/ic_tick"
                    app:checkedIconTint="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#1AFFFFFF" />

            <!-- Full width button -->
            <TextView
                android:id="@+id/btnOpenAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="sans-serif"
                android:paddingVertical="14dp"
                android:paddingStart="32dp"
                android:paddingEnd="24dp"
                android:text="Open"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnStereoMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="sans-serif"
                android:paddingVertical="14dp"
                android:paddingStart="32dp"
                android:paddingEnd="24dp"
                android:text="Stereo mode"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Options container -->
            <RadioGroup
                android:id="@+id/rgStereoOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/rbStereo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primary"
                    android:fontFamily="sans-serif"
                    android:paddingStart="12dp"
                    android:text="Stereo"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbMono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/primary"
                    android:fontFamily="sans-serif"
                    android:paddingStart="12dp"
                    android:text="Mono"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/syncControlRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="32dp"
                android:paddingEnd="24dp">

                <TextView
                    android:id="@+id/tvSyncLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Synchronization"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/syncControlsBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_speed_display_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="4dp">

                    <ImageButton
                        android:id="@+id/btnSyncMinus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_minus"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvSyncValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:gravity="center"
                        android:text="0.00s"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnSyncPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_plus"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/avSyncRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="32dp"
                android:paddingEnd="24dp">

                <TextView
                    android:id="@+id/tvAvSyncLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="AV sync"
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cbAvSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#808080"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:checked="true"
                    android:enabled="false"
                    app:checkedIcon="@drawable/ic_tick"
                    app:checkedIconTint="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>