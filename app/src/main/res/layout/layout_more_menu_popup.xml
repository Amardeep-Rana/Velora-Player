<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moreMenuContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playlist_gradient"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moreMenuHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCloseMoreMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvMoreMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="More menu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCloseMoreMenu"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moreMenuHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingHorizontal="32dp">

            <CheckBox
                android:id="@+id/cbShowTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/primary"
                android:fontFamily="sans-serif"
                android:paddingStart="12dp"
                android:text="show time and battery on title bar"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:checkedIcon="@drawable/ic_tick"
                app:checkedIconTint="@color/black" />

            <CheckBox
                android:id="@+id/cbKeepScreenOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/primary"
                android:fontFamily="sans-serif"
                android:paddingStart="12dp"
                android:text="keep screen on"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:checkedIcon="@drawable/ic_tick"
                app:checkedIconTint="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#1AFFFFFF" />

            <CheckBox
                android:id="@+id/cbSeekSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary"
                android:fontFamily="sans-serif"
                android:paddingStart="12dp"
                android:text="seek speed(s/cm)"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:checkedIcon="@drawable/ic_tick"
                app:checkedIconTint="@color/black" />

            <LinearLayout
                android:id="@+id/seekSpeedControlRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Value"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_speed_display_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="4dp">

                    <ImageButton
                        android:id="@+id/btnSeekSpeedMinus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_minus"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvSeekSpeedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="50dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnSeekSpeedPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_plus"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#1AFFFFFF" />

            <CheckBox
                android:id="@+id/cbDoubleTapSeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary"
                android:fontFamily="sans-serif"
                android:paddingStart="12dp"
                android:text="double tap seek"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:checkedIcon="@drawable/ic_tick"
                app:checkedIconTint="@color/black" />

            <LinearLayout
                android:id="@+id/doubleTapControlRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Interval"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_speed_display_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="4dp">

                    <ImageButton
                        android:id="@+id/btnDoubleTapMinus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_minus"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvDoubleTapValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="50dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnDoubleTapPlus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_ripple"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_plus"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>