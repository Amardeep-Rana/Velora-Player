<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subtitleCustomizationContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playlist_gradient"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customizationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackToSubtitle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvCustomizationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="Subtitles Customization"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBackToSubtitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/customizationScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customizationHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- Section: Layout -->
            <TextView
                android:id="@+id/tvLayoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="Layout"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Alignment Row -->
            <LinearLayout
                android:id="@+id/rowAlignmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLayoutLabel">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Alignment"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvAlignmentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:drawableEndCompat="@drawable/ic_arrow_drop_down"
                    app:drawableTint="@color/white" />
            </LinearLayout>

            <!-- FLOATING ALIGNMENT POPUP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/alignmentPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                app:cardBackgroundColor="#E6000000"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="@id/rowAlignmentContainer"
                app:layout_constraintTop_toBottomOf="@id/rowAlignmentContainer"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/btnAlignLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Left"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/btnAlignCenter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/btnAlignRight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Right"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Margins Row -->
            <LinearLayout
                android:id="@+id/rowBottomMargins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowAlignmentContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="Bottom margins"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/sbBottomMargin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:max="110"
                    android:progress="18" />

                <TextView
                    android:id="@+id/tvBottomMarginValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="24dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Fit Subtitles Row -->
            <LinearLayout
                android:id="@+id/rowFitSubtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rowBottomMargins">

                <CheckBox
                    android:id="@+id/cbFitSubtitles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:buttonTint="@color/primary"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Fit subtitles into video size"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Section: Text -->
            <TextView
                android:id="@+id/tvTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif"
                android:text="Text"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/rowFitSubtitles"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Font Row -->
            <LinearLayout
                android:id="@+id/rowFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTextLabel">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Font"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvFontValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Default"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:drawableEndCompat="@drawable/ic_arrow_drop_down"
                    app:drawableTint="@color/white" />
            </LinearLayout>

            <!-- FLOATING FONT POPUP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fontPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                app:cardBackgroundColor="#E6000000"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="@id/rowFont"
                app:layout_constraintTop_toBottomOf="@id/rowFont"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/btnFontDefault"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Default"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/btnFontRoboto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Roboto"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/btnFontOswald"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Oswald"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/btnFontSerif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Serif"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/btnFontSNPro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="SN-Pro"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Size Row -->
            <LinearLayout
                android:id="@+id/rowSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowFont">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="Size"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/sbSubtitleSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:max="100"
                    android:progress="20" />

                <TextView
                    android:id="@+id/tvSubtitleSizeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="32dp"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Scale Row -->
            <LinearLayout
                android:id="@+id/rowScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="Scale"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/sbSubtitleScale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:max="200"
                    android:progress="100" />

                <TextView
                    android:id="@+id/tvSubtitleScaleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="32dp"
                    android:text="100%"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Color Row -->
            <LinearLayout
                android:id="@+id/rowColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowScale">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Color"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/viewTextColorPreview"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#808080"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:clickable="true"
                    android:focusable="true" />

                <CheckBox
                    android:id="@+id/cbTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:buttonTint="@color/primary"
                    android:text="Bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- FLOATING TEXT COLOR POPUP -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textColorPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                app:cardBackgroundColor="#E6000000"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="@id/rowColor"
                app:layout_constraintTop_toBottomOf="@id/rowColor"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <ScrollView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="250dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <LinearLayout
                            android:id="@+id/btnColorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="White"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                        <LinearLayout
                            android:id="@+id/btnColorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Black"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:cardBackgroundColor="@android:color/black"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                        <LinearLayout
                            android:id="@+id/btnColorRed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Red"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:cardBackgroundColor="#FF0000"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                        <LinearLayout
                            android:id="@+id/btnColorBlue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Blue"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:cardBackgroundColor="#0000FF"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                        <LinearLayout
                            android:id="@+id/btnColorGreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Green"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:cardBackgroundColor="#00FF00"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="#33FFFFFF" android:layout_marginHorizontal="8dp"/>

                        <LinearLayout
                            android:id="@+id/btnColorYellow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Yellow"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:cardBackgroundColor="#FFFF00"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>

            <!-- Background Color Row with direct Alpha Seeker -->
            <LinearLayout
                android:id="@+id/rowBgColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowColor">

                <CheckBox
                    android:id="@+id/cbSubtitleBackgroundColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:buttonTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minWidth="100dp"
                    android:text="Background"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/sbBgAlpha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:max="255"
                    android:progress="255" />

                <TextView
                    android:id="@+id/tvAlphaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="32dp"
                    android:text="255"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Border Row -->
            <LinearLayout
                android:id="@+id/rowBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowBgColor">

                <CheckBox
                    android:id="@+id/cbSubtitleBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:buttonTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Border"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/sbSubtitleBorder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:max="10"
                    android:progress="2" />

                <TextView
                    android:id="@+id/tvSubtitleBorderValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="32dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowShadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rowBorder">

                <CheckBox
                    android:id="@+id/cbSubtitleShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:buttonTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Shadow"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowFadeOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rowShadow">

                <CheckBox
                    android:id="@+id/cbSubtitleFadeOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:buttonTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Fade out"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>