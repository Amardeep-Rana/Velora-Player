<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subtitleContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playlist_gradient"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subtitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCloseSubtitle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvSubtitleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="Subtitle"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCloseSubtitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnOnlineSubtitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Online subtitles"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/btnOpenSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingVertical="14dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Open"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_folder"
                app:drawableTint="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_subtitle_list"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                tools:itemCount="3"
                tools:listitem="@layout/item_subtitle_track" />

            <LinearLayout
                android:id="@+id/btnSubtitleSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="14dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_settings"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivSubtitleSettingsArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_arrow_drop_down"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subtitleSettingsOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Synchronization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Synchronization"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_speed_display_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp">

                        <ImageButton
                            android:id="@+id/btnSubSyncMinus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_ripple"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_minus"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvSubSyncValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="60dp"
                            android:text="0.0s"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnSubSyncPlus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_ripple"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_plus"
                            app:tint="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Speed"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_speed_display_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp">

                        <ImageButton
                            android:id="@+id/btnSubSpeedMinus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_ripple"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_minus"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvSubSpeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minWidth="60dp"
                            android:text="100.0%"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnSubSpeedPlus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_ripple"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_plus"
                            app:tint="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Customization -->
                <TextView
                    android:id="@+id/btnSubCustomization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="sans-serif"
                    android:paddingVertical="14dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="24dp"
                    android:text="Customization"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
