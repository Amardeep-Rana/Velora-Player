<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.VeloraPlayer" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Pure app font setup -->
        <item name="android:fontFamily">monospace</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="RoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="WhiteCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/primary</item>
        <item name="android:buttonTint" tools:targetApi="m">@color/primary</item>
        <item name="android:button">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_playlist_gradient</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#CCFFFFFF</item>
        <item name="colorAccent">@color/primary</item>
    </style>
</resources>